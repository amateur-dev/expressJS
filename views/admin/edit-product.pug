extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action="/admin/update-product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", value=product.title)#title
                label(for="price") Price
                input(type="number", name="price" min="0" step="0.01" value=Number(product.price))#price
                label(for="imageUrl") Image URL
                input(type="url", name="imageUrl" min=0 value=product.imageUrl)#image
                label(for="description") Description
                textarea(type="text", name="description")#description #{product.description}
                input(type="hidden" name="prodID", value=product.id)
            button.btn(type="submit") Update Product